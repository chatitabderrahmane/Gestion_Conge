
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_employe.cshtml";
}
<h2 style="margin-top: 0; background-color: rgb(235, 235, 235); border-bottom: 2px solid rgb(202, 202, 202);font-weight:400; width: 100%; height: 40px; ">Demander un conge Mr <span> @Session["nom"] </span></h2>
@model  appGestion_conge.Models.employer
<style>
    .btn1 {
        /* Green */
        border: none;
        color: white;
        padding: 15px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        cursor: pointer;
        background-color: blue;
    }
   
       

       
 

    label {
        font-family: Aldhabi;
        font-size: 40px;
        padding: 30px;
        font-family: 'Agency FB';
        color:green;
    }

    input {
        outline: none;
        padding: 20px 50px;
        border: none;
       
        border-bottom: green solid 2px;
        font-size: 30px;
        font-family: 'Agency FB';
        height: 30px;
        margin: 8px 0;
        box-sizing: border-box;
    }

        input:focus {
            box-shadow: 0 0 2pt 2pt green;
            outline-width: 0px;
        }

    textarea:focus {
        box-shadow: 0 0 2pt 2pt green;
        outline-width: 0px;
    }

    textarea {
        outline: none;
        padding: 20px 50px;
        border: none;
        border-bottom: green solid 2px;
        font-size: 30px;
        font-family: 'Agency FB';
        height: 60px;
        margin: 8px 0;
        box-sizing: border-box;
    }

    span {
        color: red;
    }
</style>
@using (Html.BeginForm("Index", "employe", FormMethod.Post))
{
    <table>
        <tr>
            <td>  <label>Durée : </label></td>
            <td>
                <input type="text" required name="duree" />
            </td>
        </tr>
        <tr>
            <td>
                <label>Date début : </label>
            </td>
            <td>
                <input type="date" required name="date_debut" />
            </td>
        </tr>
        <tr>
            <td>
                <label>date fin : </label>
            </td>
            <td>
                <input type="date" required name="date_fin" placeholder="mm/dd/yyyy" />
            </td>
        </tr>
        <tr>
            <td>
                <label>motif : </label>
            </td>
            <td>
                <textarea name="motif" required>  </textarea>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center;">

                <button class="btn1"type="submit"> <i class="fa-solid fa-paper-plane"></i>Envoyer </button>
            </td>
        </tr>

    </table>

}
@if (ViewBag.Message != null)
{
    <script>
        window.onload = function () {
            alert("@ViewBag.Message");
        }
    </script>
}


