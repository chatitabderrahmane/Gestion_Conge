
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>salariié  login</title>

    @model  List<appGestion_conge.Models.employer>
</head>
<style>
    * {
        margin: 0;
        padding: 0%;
    }

    .admin h1 {
        font-size: 50px;
        color: rgb(6, 206, 72);
        text-align: center;
    }

    .admin input {
        width: 500px;
        height: 50px;
        outline: none;
        border: none;
        font-size: 20px;
        padding-left: 10px;
        border-radius: 10px;
        border-bottom: blue 5px solid;
        background-color: rgba(255, 255, 255, 0.856);
    }

    input:focus {
        transform: scale(1.1);
    }

    .admin label {
        font-size: 30px;
        color: rgb(255, 255, 255);
    }

    .admin button {
        margin: 40px;
        cursor: pointer;
        width: 400px;
        height: 45px;
        cursor: pointer;
        background-color: green;
        border-radius: 9px;
        color: white;
        font-size: 40px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
    }

    .content {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
    }

    .content-picture {
        width: 100%;
        height: 100VH;
        background-image: cover;
    }

    img {
        width: 100%;
        height: 100VH;
        background-image: cover;
    }

    .admin button:hover {
        opacity: 0.8;
    }

    .admin {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
    }
</style>
<body>
    <div class="content">
        <div class="content-picture">
             
          
            <img src="~/Content/images/loginphoto.jpg" alt="backround"  /> 
        </div>

        <div class="admin">
            <h1>
                espace de salarié <br> <ion-icon style="font-size: 50px; color: rgb(255, 255, 255);" name="contact"></ion-icon>

            </h1>
            @using (Html.BeginForm("login", "employe", FormMethod.Post))
            {
                <label for="">username : </label> <br>
                <input type="text" required name="username" placeholder="username here"><br><br>
                <label for=""> mot de passe :</label><br>
                <input type="password" name="motdepasse" required placeholder="mot de passe"><br>
                <button type="submit"> entrer </button>
            }
            <h1> <a style="color:gray" href="/admin/loginadmin">Admin</a> </h1>
        </div>

    </div>
    <!-- script -->
    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>



</body>
</html>
